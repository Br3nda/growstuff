.homepage
  - if member_signed_in?
    .row
      .col-md-8
        .homepage-blurb
          %h1= t('.welcome', site_name: ENV['GROWSTUFF_SITE_NAME'], member_name: current_member)
          %p= t('home.blurb.intro', site_name: ENV['GROWSTUFF_SITE_NAME'])
          = render 'stats'
      .col-md-4
        = render 'personalised'
  - else
    .jumbotron= render 'blurb'

  .row
    .col-lg-8.col-md-6.col-sm-12
      = render 'crops'
    .col-lg-2.col-md-3.col-sm-6
      = render 'plantings'
    .col-lg-2.col-md-3.col-sm-6
      = render 'harvests'
    .col-md-12
      - cache cache_key_for(Crop, 'recent') do
        %p{ style: 'margin-top: 11.25px' }
          %strong
            #{t('.recently_added')}:
          != Crop.recent.limit(30).map { |c| link_to(c, c) }.join(", ")

  %p.text-right
    = link_to "#{t('home.crops.view_all')} Â»", crops_path

  = render 'seeds'
  = render 'members'
  = render 'discuss'
